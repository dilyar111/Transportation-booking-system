<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up - Transportation Booking System</title>
    <style>
        body {
            margin: 0;
            font-family: 'Poppins', sans-serif;
            background: url('/images/img1.png') no-repeat center center fixed;
            background-size: cover;
            color: #fff;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .container {
            text-align: center;
            max-width: 900px;
            padding: 40px;
            border-radius: 20px;
            background: rgba(0, 0, 0, 0.8);
            box-shadow: 0 10px 30px rgba(255, 102, 0, 0.5);
            backdrop-filter: blur(10px);
        }
        .title {
            font-size: 3.8rem;
            margin-bottom: 1.5rem;
            color: #ffcc00;
            text-shadow: 0 4px 10px rgba(255, 102, 0, 0.5);
        }
        .subtitle {
            font-size: 1.5rem;
            margin-bottom: 2rem;
            color: #e0e0e0;
        }
        .signup-form {
            margin-top: 2rem;
            text-align: left;
            max-width: 400px;
            margin: 0 auto;
        }
        .signup-form input, .signup-form select, .signup-form button {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border-radius: 5px;
            border: 1px solid #ccc;
        }
        .signup-form button {
            background-color: #ff6600;
            color: #fff;
            font-size: 1rem;
            border: none;
            cursor: pointer;
        }
        .signup-form button:hover {
            background-color: #ffcc00;
        }
        .navigation {
            margin: 20px 0;
            font-size: 1rem;
        }
        .navigation a {
            margin: 0 15px;
            color: #ffcc00;
            text-decoration: none;
            font-weight: bold;
            transition: color 0.3s ease;
        }
        .navigation a:hover {
            color: #ff6a00;
        }
        .footer {
            text-align: center;
            font-size: 0.9rem;
            color: rgba(255, 255, 255, 0.8);
            margin-top: 20px;
        }
        .login-link {
            margin-top: 15px;
            font-size: 1rem;
            color: #ffcc00;
        }
        .login-link a {
            color: #ffcc00;
            text-decoration: none;
            font-weight: bold;
        }
        .login-link a:hover {
            color: #ff6a00;
        }
        #admin-id-field {
            display: none;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="title">Sign Up</h1>
        <p class="subtitle">Please provide the necessary information to create an account.</p>

        <div class="signup-form">
            <form id="signup-form" onsubmit="handleSignup(event)">
                <input type="text" name="name" id="name" placeholder="Full Name" required>
                <input type="email" name="email" id="email" placeholder="Email Address" required>
                <input type="password" name="password" id="password" placeholder="Password" required>
                <select id="user-type" name="type" onchange="toggleAdminIdField()" required>
                    <option value="">Select Account Type</option>
                    <option value="user">User</option>
                    <option value="admin">Admin</option>
                </select>
                <div id="admin-id-field">
                    <input type="text" id="admin-id" name="adminId" placeholder="Enter Admin ID">
                </div>
                <button type="submit">Sign Up</button>
            </form>
        </div>

        <div class="login-link">
            <p>Already have an account? <a href="/">Login Here</a></p>
        </div>

        <div class="navigation">
            <a href="/">Home</a>
            <a href="/about">About Us</a>
            <a href="/contact">Contact</a>
        </div>
        <footer class="footer">&copy; 2024 Transportation Booking System. All Rights Reserved.</footer>
    </div>

    <script>
        function toggleAdminIdField() {
            let userType = document.getElementById("user-type").value;
            let adminField = document.getElementById("admin-id-field");
            let adminInput = document.getElementById("admin-id");
            if (userType === "admin") {
                adminField.style.display = "block";
                adminInput.setAttribute("required", "true");
            } else {
                adminField.style.display = "none";
                adminInput.removeAttribute("required");
            }
        }
    </script>
</body>
</html>
